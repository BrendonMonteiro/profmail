<script>
  function updateSelectOptions() {
      var assRlSelecionado = $("#ass_rl").val();
      var selectRl = $("#select_rl");
  
      // Limpa as opções atuais
      selectRl.empty();
  
      // Se nada estiver selecionado em ass_rl, não adiciona opções
      if (!assRlSelecionado) {
          return; // Sai da função sem adicionar opções
      }
  
      // Adiciona a opção padrão
      selectRl.append('<option value="" disabled selected>Tipo de notificação</option>');
  
      // Define as opções permitidas com base na seleção de ass_rl
      var allowedOptions = {
          'liderança': ['Carta_de_Aviso', 'Carta_de_Medalhas_Efetivas_Negativas', 'Carta_de_Advertência_Verbal', 'Carta_de_Advertência_Interna', 'Carta_de_Rebaixamento', 'Carta_de_Expulsão', 'Avaliação_de_Propostas', 'Avaliação_de_Promoções', 'Reunião_do_Conselho', 'Comunicado_da_Liderança', 'Escalas_Atualizadas', 'Carta_de_Promoção_de_Estagiário', 'Carta_de_Promoção_de_Conselheiro', 'Carta_de_Estagio_de_Administração','Carta_de_Estagio_de_Assistência', 'Carta_de_Estagio_de_ATT1', 'Carta_de_Estagio_de_ATT2', 'Carta_de_Estagio_de_Contabilidade', 'Carta_de_Estagio_de_Documentação', 'Carta_de_Estagio_de_Finanças', 'Carta_de_Estagio_de_Segurança'],
          'conselho': ['Carta_de_Aviso', 'Carta_de_Medalhas_Efetivas_Negativas', 'Carta_de_Advertência_Verbal', 'Carta_de_Advertência_Interna', 'Carta_de_Rebaixamento', 'Carta_de_Expulsão', 'Avaliação_de_Propostas', 'Avaliação_de_Promoções', 'Reunião_do_Conselho', 'Comunicado_da_Liderança', 'Escalas_Atualizadas', 'Carta_de_Promoção_de_Estagiário', 'Carta_de_Promoção_de_Conselheiro', 'Carta_de_Estagio_de_Administração','Carta_de_Estagio_de_Assistência', 'Carta_de_Estagio_de_ATT1', 'Carta_de_Estagio_de_ATT2', 'Carta_de_Estagio_de_Contabilidade', 'Carta_de_Estagio_de_Documentação', 'Carta_de_Estagio_de_Finanças', 'Carta_de_Estagio_de_Segurança']
          // Adicione outras combinações, se necessário
      };
  
      // Verifica se a seleção de ass_rl existe no objeto e adiciona as opções correspondentes
      if (allowedOptions[assRlSelecionado]) {
          allowedOptions[assRlSelecionado].forEach(function(option) {
              selectRl.append('<option value="' + option + '">' + option.charAt(0).toUpperCase() + option.slice(1).replace(/_/g, ' ') + '</option>');
          });
      }
  }
  </script>
<script>
  let activeForm = null;
  let currentIndex = 0;
  const buttons = document.querySelectorAll(".button");
  const totalButtons = buttons.length;

  function updateButtons() {
    // Oculta todos os botões
    buttons.forEach((button) => {
      button.style.display = "none";
    });

    // Exibe apenas os botões desejados
    for (let i = 0; i < 3; i++) {
      if (currentIndex + i < totalButtons) {
        buttons[currentIndex + i].style.display = "block";
      }
    }
  }

  document.addEventListener("DOMContentLoaded", () => {
    const credits = document.querySelector(".credits");
    setTimeout(() => {
      credits.classList.add("show");
    }, 500); // Pequeno atraso para permitir a transição
  });

  function prevButton() {
    if (currentIndex > 0) {
      currentIndex--;
      updateButtons();
    }
  }

  function nextButton() {
    if (currentIndex + 3 < totalButtons) {
      currentIndex++;
      updateButtons();
    }
  }

  updateButtons();
  
  function toggleForm(formId) {
        const newForm = document.getElementById(formId);
        const body = document.body;

        if (activeForm && activeForm !== newForm) {
          activeForm.style.display = "none";
          activeForm.classList.remove("active");
        }

        newForm.style.display = "flex";
        setTimeout(() => {
          newForm.classList.add("active");
          newForm.style.display = "block";
        }, 10); // Pequeno atraso para permitir a transição
        activeForm = newForm;
        body.classList.add("scrollable");
      }

  </script>
<script>

  const formTitles = {
  Carta_de_Aviso: "Carta de Aviso! LEIA!",
  Carta_de_Medalhas_Efetivas_Negativas: "Carta de Medalhas Efetivas Negativas! LEIA!",
  Carta_de_Advertência_Verbal: "Carta de Advertência Verbal! LEIA!",
  Carta_de_Advertência_Interna: "Carta de Advertência Interna! LEIA!",
  Carta_de_Rebaixamento: "Carta de Rebaixamento! LEIA!",
  Carta_de_Expulsão: "Carta de Expulsão! LEIA!",
  Avaliação_de_Propostas: "Avaliação de Propostas! ★",
  Avaliação_de_Promoções: "Avaliação de Promoções! ★",
  Reunião_do_Conselho: "Reunião do Conselho! ★",
  Comunicado_da_Liderança: "Comunicado! ★",
  Escalas_Atualizadas: "Escalas do Estágio & Atividades Atualizadas! ★",
  Carta_de_Promoção_de_Estagiário: "Carta de Promoção! ABRA! ★",
  Carta_de_Promoção_de_Conselheiro: "Carta de Promoção! ABRA! ★",
  Carta_de_Estagio_de_Administração: "Carta de Estagio (Administração)! ★",
  Carta_de_Estagio_de_Assistência: "Carta de Estagio (Assistência)! ★",
  Carta_de_Estagio_de_ATT1: "Carta de Estagio (Atualização 1)! ★",
  Carta_de_Estagio_de_ATT2: "Carta de Estagio (Atualização 2)! ★",
  Carta_de_Estagio_de_Contabilidade: "Carta de Estagio (Contabilidade)! ★",
  Carta_de_Estagio_de_Finanças: "Carta de Estagio (Finanças)! ★",
  Carta_de_Estagio_de_Documentação: "Carta de Estagio (Documentação)! ★",
  Carta_de_Estagio_de_Segurança: "Carta de Estagio (Segurança)! ★",

};

// Função para capturar título e enviar a MP
function handleFormSubmit(formId) {
  if (formId === 'form1') {
    // Supondo que o valor selecionado do título venha de um input com o ID '#title-select'
    const selectedTitleKey = document.querySelector('#form1 #title-select').value;
    const title = formTitles[selectedTitleKey];  // Captura o título correspondente no objeto
    
    // Captura valores de 'user' e 'message'
    const user = document.querySelector('#form1 .user-input').value;
    const message = document.querySelector('#form1 .message-input').value;

    if (title) {
      // Chama a função send_MP com o título correto
      send_MP(title, user, message);
    } else {
      console.log('Título não encontrado');
    }
  }
}

  document.addEventListener("DOMContentLoaded", () => {
    const credits = document.querySelector(".credits");
    setTimeout(() => {
      credits.classList.add("show");
    }, 500); // Pequeno atraso para permitir a transição
  });


  $(document).ready(function () {
  // Verifica se é o form1 baseado no URL ou em algum identificador específico
  if (window.location.pathname.includes('form1')) { 
    const urlParams = new URLSearchParams(window.location.search).forEach(function (x, y) {
      if (y == 'auto_sent' && x.split('')[0] == "sim") { fill_mp(x.split('')[1]) }
      else if (y == 'select_options') { document.getElementById(x).style.display = 'block'; document.getElementById(y).value = x }
      else if (y != 'auto_sent') { document.getElementById(y).value = x }
    });
    
    $('#select_options').on('change', function () {
      $(".card").hide();
      $("#" + $(this).val()).show();
    }).change();
  }
});

function fill_mp(type) {
  var isValid = true;
  var nickInput = $("#nick_membros_" + type).val().trim();
  var crimesInput = $("#crimes_" + type).val();
  var comprovacaoInput = $("#comprovacao_" + type).val();
  var comentarioInput = $("#comentario_" + type).val();

  // Validação para nickInput
  if (nickInput === "") {
    isValid = false;
    alert('Insira o nick do Professor!');
  }

  // Validação dos campos visíveis
  if ($("#crimes_" + type).is(":visible") && crimesInput === "") {
    isValid = false;
  }
  if ($("#comprovacao_" + type).is(":visible") && comprovacaoInput === "") {
    isValid = false;
  }
  if ($("#comentario_" + type).is(":visible") && comentarioInput === "") {
    isValid = false;
  }

  if (isValid) {
    $("#enviar_" + type + "_btn").css('display', 'none');
    $("#enviar_" + type + "_dis").css('display', 'block');

    var lista = nickInput.replaceAll(' ', '').replaceAll('/', ' / ').split(' / ');
    var user = lista.filter(n => n); // Remove entradas vazias

    var title = get_title(type);
    var message = create_message(type, $("#data_rl").val());

    console.log($("#data_rl").val());

    send_MP(title, user, message);
  } else {
    alert('Preencha todos os campos obrigatórios!');
    return false;
  }
}

function get_title() {
  const selectValue = $("#select_rl").val();
  const ass_rl = $("#ass_rl").val();
  let prefix = "[PROF]";

  if (ass_rl.includes("conselho")) {
    prefix = "[PROF.CONS]";
  } else if (ass_rl.includes("liderança")) {
    prefix = "[PROF/LID]";
  }

  const title = formTitles[selectValue] || "Carta de Notificação! ★";
  return `${prefix} ${title}`;
}

function create_message(data) {
  var message = "";
  var select_rl = $("#select_rl").val();
  var crimes_rl = $("#crimes_rl").val();
  var comprovacao_rl = $("#comprovacao_rl").val();
  var comentario_rl = $("#comentario_rl").val();
  var ass_rl = $("#ass_rl").val();

  var bbcodeTag = '';
  if (ass_rl === 'liderança') {
    bbcodeTag = '[img]https://i.imgur.com/MkOGdUV.png[/img]';
  } else if (ass_rl === 'conselho') {
    bbcodeTag = '[img]https://i.imgur.com/1kZvQHs.png[/img]';
  }

  var anexo1 = '';

    if (select_rl === 'Carta_de_Estagio_de_Administração') {
