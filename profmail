                default:
                message = 'Tipo de notificação não definido.';
        }
    } else {
        message = 'A combinação de Tipo de Notificação e Assunto não é válida.';
    }

    return message;
}

// Função para enviar a mensagem privada (mantendo a lógica original)
function send_MP(title, user, message) {
    jQuery.post('/privmsg', {
        folder: 'inbox',
        mode: 'post',
        post: '1',
        'username[]': user,
        subject: title,
        message: message
    })
    .done(function() {
        console.log("Mensagem Privada enviada!");
        // Redirecionar para a caixa de entrada após o envio
        location.href = "https://www.policiarcc.com/privmsg?folder=inbox";
    })
    .fail(function() {
        console.log("Erro ao enviar a mensagem.");
    });
}

// Vincula a função send_MP ao evento de envio do formulário form1
document.getElementById('form1').addEventListener('submit', function(event) {
    event.preventDefault(); // Impede o envio padrão do formulário

    // Captura os dados do formulário
    const nickInput = document.getElementById('nick_membros_rl').value;
    const title = get_title();
    const message = create_message();

    // Chama a função send_MP com os dados capturados
    send_MP(title, nickInput, message);
});

  function retorna_horario() {
    var horario = new Date();
    horario.setMinutes(horario.getMinutes() + horario.getTimezoneOffset() - 180);
    var data_hoje = horario.getDate();
    if (data_hoje < 10) { data_hoje = '0' + data_hoje };
    const meses = ["Jan", "Fev", "Mar", "Abr", "Mai", "Jun", "Jul", "Ago", "Set", "Out", "Nov", "Dez"];
    var mes_hoje = meses[horario.getMonth()];
    var ano_hoje = horario.getFullYear();
    var retornar = data_hoje + ' ' + mes_hoje + ' ' + ano_hoje;

    return retornar;
  }
  function updateButtons() {
    // Oculta todos os botões
    buttons.forEach((button) => {
      button.style.display = "none";
    });

    // Exibe apenas os botões desejados
    for (let i = 0; i < 3; i++) {
      if (currentIndex + i < totalButtons) {
        buttons[currentIndex + i].style.display = "block";
      }
    }
  }

</script>
<script>
  // Função para remover o loader com fade-out
  function removeLoader() {
      var loader = document.getElementById('loader');
      loader.classList.add('fade-out');
      loader.addEventListener('animationend', function () {
          loader.style.display = 'none';
          document.body.style.overflow = 'auto'; // Restaura o scroll
      });
  }

  // Espera 5 segundos e depois chama a função para remover o loader
  window.onload = function () {
      setTimeout(removeLoader, 900); // Altere o tempo aqui se necessário
  };
</script>
<script></script>
