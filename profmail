        comentarioInput.style.display = 'block';

    } else if (selectValue === "Carta_de_Promoção_de_Estagiário") {

    } else if (selectValue === "Carta_de_Promoção_de_Conselheiro") {

    } else if (selectValue === "Carta_de_Estagio_de_Administração"){
        crimesInput.placeholder = "Dias de Função";
        comprovacaoInput.placeholder = "Comentários";

        crimesInput.style.display = 'block';
        comprovacaoInput.style.display = 'block';

    } else if (selectValue === "Carta_de_Estagio_de_Assistência"){
        crimesInput.placeholder = "Dias de Função";
        comprovacaoInput.placeholder = "Comentários";

        crimesInput.style.display = 'block';
