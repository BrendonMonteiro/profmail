<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="https://forumeiros.github.io/assets/src/form-generator/form-replace.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
<script>
    (function ($) {
        "use strict";
        $(window).on("load", function () {
            $("#enviarBtn2").on("click", function (event) {
                event.preventDefault();

                const ministrante = $("#Ministrante1").val().trim();
                const pauta = $("#Pauta1").val().trim();
                const dataata = ($("#Dataata1").val().trim()); 
                const horario = $("#Horário1").val().trim();
                const presentes = $("#Presentes1").val().trim();
                const parcialmentePresentes = $("#Parcialmente_Presentes1").val().trim();
                const anexosata = $("#Anexosata").val().trim(); 
                const assinatura = $("#AssAta").val().trim();
                const pedref = $("#pedref").val().trim();
                const discussoesAbordadas = $("#DiscussõesAbordadas").val().trim();

                // Verifica se todos os campos obrigatórios estão preenchidos
                if (ministrante && pauta && dataata && horario && presentes && parcialmentePresentes && anexosata && assinatura && discussoesAbordadas && pedref) {
                    const message = createMessage(ministrante, pauta, dataata, horario, presentes, parcialmentePresentes, anexosata, assinatura, discussoesAbordadas, pedref);
                    
                    // Esconde o botão de enviar e mostra o botão "Postando..."
                    $("#enviarBtn2").hide();
                    $("#postandoBtn2").prop("disabled", false).parent().show();

                    console.log("Enviando a mensagem...");

                    setTimeout(function () {
                        $.post("/post", {
                            t: 31762,
                            message: message,
                            mode: "reply",
                            post: 1,
                        })
                        .done(function (response) {
                            console.log("Resposta do servidor:", response);
                            // Redireciona após o envio bem-sucedido
                            location.href = "http://" + location.host + "/t31762-?view=newest";
                        })
                        .fail(function () {
                            alert("Houve um erro! Tente novamente!");
                        })
                        .always(function () {
                            // Reabilita o botão de enviar e esconde o botão "Postando..."
                            $("#enviarBtn2").show();
                            $("#postandoBtn2").prop("disabled", true).parent().hide();
                        });
                    }, 600);
                } else {
                    alert("Preencha todos os campos obrigatórios!");
                }
            });

            function createMessage(ministrante, pauta, dataata, horario, presentes, parcialmentePresentes, anexosata, assinatura, discussoesAbordadas, pedref) {

                let message = '[font=Poppins][table style="border-radius: 15px; border: none!important; overflow: hidden; width: 100%; font-family: Poppins, sans-serif; line-height: 0.5em" bgcolor="821F88"]' +
                '[tr style="border: none!important; overflow: hidden"][td style="border: none!important; overflow: hidden"]' +
                '[table style="border-radius: 15px; border: none; overflow: hidden; width: 100%; font-family: Poppins, sans-serif; line-height: 1.4em" bgcolor="ffffff"]' +
                '[tr style="border: none!important; overflow: hidden"][td style="border: none!important; overflow: hidden"]' +
                '[table style="border-radius: 15px; border: none!important; overflow: hidden; width: 100%; font-family: Poppins, sans-serif; line-height: 1em" bgcolor="821F88"]' +
                '[tr style="border: none!important; overflow: hidden"][td style="border: none!important; overflow: hidden"][img]https://imgur.com/skECnYA.png[/img]\n' +
                '[color=white][size=18][b]ATA DE REUNIÃO DO CONSELHO[/b][/size][/color][/td][/tr][/table]\n\n' +

                '[center]Dispõe-se, por intermédio desta estrutura, um registro oficial acerca da reunião do Conselho Deliberativo da companhia dos Professores.[/center]\n\n' +

                '[justify][color=#821F88][b]DATA E HORÁRIO INICIAL:[/b][/color] ' + dataata + ' às ' + horario + '\n' +
                '[color=#821F88][b]MINISTRANTE(S):[/b][/color] ' + ministrante + '\n' +
                '[color=#821F88][b]MEMBROS PRESENTES:[/b][/color] ' + presentes + '\n' +
                '[color=#821F88][b]MEMBROS PARCIALMENTE PRESENTES:[/b][/color] ' + parcialmentePresentes + '[/justify]\n\n' +

                '[table style="border-radius: 15px; border: none; overflow: hidden; width: 100%; font-family: Poppins, sans-serif; line-height: 1.2em"]' +
                '[tr style="border: none!important; overflow: hidden"][td style="border: none!important; overflow: hidden" bgcolor="821F88"]' +
                '[color=white][size=18][b]DADOS E INFORMAÇÕES[/b][/size][/color][/td][/tr]' +
                '[tr style="border: none!important; overflow: hidden"][td style="border: none!important; overflow: hidden" bgcolor="f0f0f0"]\n' +
                '[justify][color=#821F88][b]PAUTA:[/b][/color] ' + pauta + '[/justify]\n\n' +
                '[justify][color=#821F88][b]DISCUSSÕES ABORDADAS:[/b][/color]\n\n ' + discussoesAbordadas + '[/justify]\n\n';

                const dynamicFields = $('#dynamicFieldsContainer .row');
                let hasPromotion = false; // Variável para rastrear se Promoções já foram adicionadas

                dynamicFields.each(function() {
                    const select = $(this).find('select').first();
                    const textarea = $(this).find('input[type="text"]').first();

                    if (select.val()) {
                        const selectedOption = select.val();
                        const nicknames = textarea.val().trim();

                        // Adiciona o título das promoções apenas uma vez
                        if (!hasPromotion) {
                            message += '[justify][color=#821F88][b]PROMOÇÕES:[/b][/color]\n\n[b]Promovidos da semana #PROF - '+ pedref +'[/b][/justify]'; // Título das promoções
                            hasPromotion = true; // Define que Promoções foram adicionadas
                        }

                        message += '\n[justify][color=#821F88][b]' + selectedOption + '[/b][/color][/justify]\n';

                        // Divide os nicknames usando " / " e os adiciona um abaixo do outro
                        const nicknameList = nicknames.split(' / ');
                        nicknameList.forEach(function(nickname) {
                            message += '[justify]' + nickname.trim() + '[/justify]\n';
                        });
                    }
                });

                // Verifica se anexosata é válido ou está vazio
                if (anexosata && isValidUrl(anexosata)) {
                    message += '[center][table style="border-radius: 15px; border: none; overflow: hidden; width: 30%; font-family: Poppins, sans-serif"][tr style="border: none!important; overflow: hidden"][td style="width: 19%; border: none!important; overflow: hidden" bgcolor="821F88"][right][img]https://i.imgur.com/LHeyX1U.png[/img][/right][/td][td style="width: 30%; border: none!important; overflow: hidden" bgcolor="821F88"][b][size=15][left][url=' + anexosata + '][color=#ffffff]TRANSPARÊNCIA[/color][/url][/left][/size][/b][/td][/tr][/table][/center]';
                }

                message += '[/td][/tr][/table]\n\n[size=12][i]Este documento foi redigido por ' + assinatura + '[/i][/size]' +
                '[/td][/tr][/table][/td][/tr][/table][/font]';

                return message;
            }

            // Função para validar a URL
            function isValidUrl(string) {
                try {
                    new URL(string);
                    return true; // A URL é válida
                } catch (_) {
                    return false; // A URL não é válida
                }
            }


        });
    })(jQuery);
</script>
<script>
    document.getElementById('addFieldBtn').addEventListener('click', function() {
        // Criar um novo div para os campos
        const newFieldDiv = document.createElement('div');
        newFieldDiv.classList.add('row');
        newFieldDiv.style.marginBottom = "15px"; // Adiciona margem inferior para espaço

        // Criar o select para "Promoções"
        const select = document.createElement('select');
        select.placeholder = "Promoções";
        const options = ["Professor > Coordenador", "Coordenador > Graduador", "Graduador > Estagiário", "Estagiário > Conselheiro"];
        options.forEach(optionText => {
            const option = document.createElement('option');
            option.value = optionText;
            option.textContent = optionText;
            select.appendChild(option);
        });

        // Criar o input de texto
        const inputText = document.createElement('input');
        inputText.placeholder = "Nicknames";
        inputText.type = "text";
        
        // Adicionar os novos campos ao novo div
        newFieldDiv.appendChild(select);
        newFieldDiv.appendChild(inputText);
        
        // Adicionar o novo div ao contêiner de campos dinâmicos
        document.getElementById('dynamicFieldsContainer').appendChild(newFieldDiv);
    });
</script>
<script>
    function mostrarBotao2() {
      const submitDiv = document.querySelector('.submit');
      submitDiv.style.display = 'block'; // Exibe o botão
      const postandoBtn = document.getElementById('postandoBtn2');
      postandoBtn.disabled = false; // Habilita o botão
  
      const texto = "Postando...";
      const postandoText = document.getElementById('postandoText2');
      postandoText.innerHTML = ''; // Limpa o texto existente
  
      // Adiciona cada letra ao span e aplica a animação
      texto.split('').forEach((letra, index) => {
          const span = document.createElement('span');
          span.className = 'letra';
          span.style.animationDelay = `${index * 100}ms`; // Delay baseado na posição da letra
          span.textContent = letra;
          postandoText.appendChild(span);
      });
  }
  
  // Chame a função quando precisar mostrar o botão
  mostrarBotao2();
  </script>
<script>
  function mostrarBotao() {
    const submitDiv = document.querySelector('.submit');
    submitDiv.style.display = 'block'; // Exibe o botão
    const postandoBtn = document.getElementById('postandoBtn');
    postandoBtn.disabled = false; // Habilita o botão

    const texto = "Postando...";
    const postandoText = document.getElementById('postandoText');
    postandoText.innerHTML = ''; // Limpa o texto existente

    // Adiciona cada letra ao span e aplica a animação
    texto.split('').forEach((letra, index) => {
        const span = document.createElement('span');
        span.className = 'letra';
        span.style.animationDelay = `${index * 100}ms`; // Delay baseado na posição da letra
        span.textContent = letra;
        postandoText.appendChild(span);
    });
}

// Chame a função quando precisar mostrar o botão
mostrarBotao();
</script>
<script type="text/javascript">
    // POSTAGEM NO FÓRUM
    (function ($) {
        "use strict";
        $(window).on("load", function () {
            $("#enviarBtn").on("click", function (event) {
                event.preventDefault();

                // Verifica se a opção "BBCode Edital" ou "hub" está selecionada
                const bbcodeValue = $("#Bbcode_forum").val();
                if (bbcodeValue === "edital" || bbcodeValue === "hub") {
                    const bbcodeMessage = gatherFormData(bbcodeValue);

                    if (bbcodeMessage) {
                        // Esconde o botão de enviar e mostra o botão "Postando..."
                        $("#enviarBtn").hide();
                        $("#postandoBtn").prop("disabled", false).parent().show();

                        setTimeout(function () {
                            $.post("/post", {
                                t: bbcodeValue === "hub" ? 33340 : 35269, // Altera o valor de t baseado na seleção
                                message: bbcodeMessage,
                                mode: "reply",
                                post: 1,
                            })
                            .done(function () {
                                // Redireciona para a URL apropriada
                                location.href = "http://" + location.host + (bbcodeValue === "hub" ? "/t33340-?view=newest" : "/t35269-?view=newest");
                            })
                            .fail(function () {
                                alert("Houve um erro! Tente novamente!");
                            })
                            .always(function () {
                                // Reabilita o botão de enviar e esconde o botão "Postando..."
                                $("#enviarBtn").show();
                                $("#postandoBtn").prop("disabled", true).parent().hide();
                            });
                        }, 600);
                    } else {
                        alert("Preencha todos os campos obrigatórios!");
                    }
                } else {
                    alert("Por favor, selecione 'BBCode Edital' ou 'hub' para continuar!");
                }
            });

            function gatherFormData(bbcodeValue) {
                const numberHomol = $("#Number_homol").val().trim();
                const rawDataHomol = $("#Data_homol").val().trim();
                const temaHomol = $("#Tema_homol").val().trim();
                const corpoHomol = $("#Corpo_homol").val().trim(); // Texto em BBCode
                const assHomol = $("#Ass_homol").val().trim();

                if (bbcodeValue === "hub") {
                    // Apenas numberHomol é obrigatório
                    if (corpoHomol) {
                        return `[font=Poppins][table style="border-radius:15px; border: none!important; line-height: 1em;" bgcolor="#821F88"][tr style="border: none!important"][td style="border: none!important"]` +
                        `[table style="border-radius:15px; border: none!important; line-height: 1em;" bgcolor="#ffffff"][tr style="border: none!important"][td style="border: none!important"]` +
                        `[table style="border-radius:15px; border: none!important; line-height: 1em;" bgcolor="#821F88"][tr style="border: none!important"][td style="border: none!important"][img]https://i.imgur.com/pB1K77V.png[/img]\n` +
                        `[size=18][color=white][b]HOMOLOGAÇÃO Nº ${corpoHomol} FOI POSTADA![/b][/color][/size][/td][/tr][/table]\n\n` +
                        `[center][color=#821F88]➤[/color] Confira [url=https://www.policiarcc.com/t33340-prof-edital-de-homologacao]clicando aqui[/url].[/center][/td][/tr][/table][/td][/tr][/table][/font]`;
                    }
                } else {
                    // Para "edital", todos os campos são obrigatórios
                    const dataHomol = formatDate(rawDataHomol); // Formata a data

                    if (numberHomol && dataHomol && temaHomol && corpoHomol && assHomol) {
                        // Criação do BBCode
                        return `[font=Poppins][table style="border-radius:15px; border: none!important; line-height: 1em;" bgcolor="#821F88"][tr style="border: none!important"][td style="border: none!important"]` +
                        `[table style="border-radius:15px; border: none!important; line-height: 1em;" bgcolor="#ffffff"][tr style="border: none!important"][td style="border: none!important"]` +
                        `[table style="border-radius:15px; border: none!important; line-height: 1em;" bgcolor="#821F88"][tr style="border: none!important"][td style="border: none!important"][img]https://i.imgur.com/pB1K77V.png[/img]\n` +
                        `[size=18][color=white][b]HOMOLOGAÇÃO Nº ${numberHomol}[/b][/color][/size][/td][/tr][/table]\n\n` +
                        `[center][color=#821F88][b] ${temaHomol}\n` +
                        `[/b][/color]${dataHomol}[/center]\n\n` +
                        `[table style="border-radius: 15px; border: none; overflow: hidden; width: 100%; font-family: Poppins, sans-serif; line-height: 1.2em"]` +
                        `[tr style="border: none!important; overflow: hidden"][td style="border: none!important; overflow: hidden" bgcolor="f0f0f0"]` +
                        `[justify]${corpoHomol}[/justify][/td][/tr][/table][/td][/tr][/table][/td][/tr][/table]\n\n` +
                        `[center]Assina esta homologação,\n ${assHomol}[/center][/font]`;
                    }
                }
                return null; // Retorna null se algum campo estiver vazio
            }

            function formatDate(rawDate) {
                const options = { day: '2-digit', month: 'long', year: 'numeric', locale: 'pt-BR' };
                const date = new Date(rawDate);
                return date.toLocaleDateString('pt-BR', options);
            }
        });
    })(jQuery);
</script>
<script>
    function updatePlaceholders2() {
        const BBcodeValue = document.getElementById('Bbcode_forum').value;
        const NumberInput = document.getElementById('Number_homol');
        const Data2Input = document.getElementById('Data_homol');
        const TemaHomoInput = document.getElementById('Tema_homol');
        const CorpohomoInput = document.getElementById('Corpo_homol');
        const AsshomoInput = document.getElementById('Ass_homol');

        // Reset all inputs to hidden
        NumberInput.style.display = 'none';
        Data2Input.style.display = 'none';
        TemaHomoInput.style.display = 'none';
        CorpohomoInput.style.display = 'none';
        AsshomoInput.style.display = 'none';

        // Definir placeholders e exibir campos com base no valor do BBcodeValue
        switch (BBcodeValue) {
            case "edital":
            NumberInput.placeholder = "Nº de Homologação";
                Data2Input.placeholder = "Data";
                TemaHomoInput.placeholder = "Tema";
                CorpohomoInput.placeholder = "Corpo da Homologação (em BBCode)";
                AsshomoInput.placeholder = "Cargo e Nick do Autor";

                NumberInput.style.display = 'block';
                Data2Input.style.display = 'block';
                TemaHomoInput.style.display = 'block';
                CorpohomoInput.style.display = 'block';
                AsshomoInput.style.display = 'block';
                break;

            case "hub":
            CorpohomoInput.placeholder = "Nº de Homologação";
            CorpohomoInput.style.display = 'block';
                break;

            default:
                // Todos os campos permanecem invisíveis
                break;
        }
    }

</script>
<script>
  function updatePlaceholders() {
    const selectValue = document.getElementById('select_rl').value;
    const nickInput = document.getElementById('nick_membros_rl');
    const crimesInput = document.getElementById('crimes_rl');
    const comprovacaoInput = document.getElementById('comprovacao_rl');
    const comentarioInput = document.getElementById('comentario_rl');

    // O campo de Nick é sempre visível
    nickInput.style.display = 'block';

    // Reset all other inputs to hidden by default
    crimesInput.style.display = 'none';
    comprovacaoInput.style.display = 'none';
    comentarioInput.style.display = 'none';

    if (selectValue === "Carta_de_Aviso") {
        crimesInput.placeholder = "Localização da Postagem";
        comprovacaoInput.placeholder = "Motivo do Cancelamento";
        comentarioInput.placeholder = "Anexos";

        crimesInput.style.display = 'block';
        comprovacaoInput.style.display = 'block';
        comentarioInput.style.display = 'block';

    } else if (selectValue === "Carta_de_Medalhas_Efetivas_Negativas") {
        crimesInput.placeholder = "Quantidade de medalhas";
        comprovacaoInput.placeholder = "Motivo";
        comentarioInput.placeholder = "Comentários/Anexos";

        crimesInput.style.display = 'block';
        comprovacaoInput.style.display = 'block';
        comentarioInput.style.display = 'block';

    } else if (selectValue === "Carta_de_Advertência_Verbal" ||
               selectValue === "Carta_de_Advertência_Interna" ||
               selectValue === "Carta_de_Rebaixamento" ||
               selectValue === "Carta_de_Expulsão") {
